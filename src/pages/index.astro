		<!--for the Swiper Effect-->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />

		<!--//for the .btn-action-->
		<link rel="preconnect" href="https://fonts.gstatic.com">
		<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">

		<style>
			html,
			body {
				position: relative;
				height: 100%;
			}

			//Styles for the Swiper Effect
			body {
				background: #eee;
				font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
				font-size: 14px;
				color: #000;
				margin: 0;
				padding: 0;
			}

			.swiper {
				width: 100%;
				height: 100%;
			}

			.swiper-slide {
				text-align: center;
				font-size: 18px;
				display: flex;
				justify-content: center;
				align-items: center;
			}

			.swiper-slide img {
				display: block;
				width: 100%;
				height: 100%;
				object-fit: cover;
			}

			.bg-game-1 {
				background-image: url("/bg-CaveGame.png");
				background-size: cover;
			}

			/*Styles for the .btn-action*/

			body {
				display: flex;
				justify-content: center;
				align-items: center;
				min-height: 100vh;
				background-color: #F8F005;
			}

			.btn-action {
				transition: all linear 0.1s;
				text-align: center;
			}

			.btn-action, .btn-action::after {
				display: block;
				width: 380px;
				height: 86px;
				font-size: 36px;
				font-family: 'Bebas Neue', cursive;
				background: linear-gradient(45deg, transparent 5%, #FF013C 5%);
				border: 0;
				color: #fff;
				letter-spacing: 3px;
				line-height: 88px;
				box-shadow: 6px 0 0 #ffda27;
				outline: transparent;
				position: relative;
			}

			.btn-action::after {
				--slice-0: inset(50% 50% 50% 50%);
				--slice-1: inset(80% -6px 0 0);
				--slice-2: inset(50% -6px 30% 0);
				--slice-3: inset(10% -6px 85% 0);
				--slice-4: inset(40% -6px 43% 0);
				--slice-5: inset(80% -6px 5% 0);

				content: 'Download';
				display: block;
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: linear-gradient(45deg, transparent 3%, #f6cd00 3%, #fffc07 5%, #FF013C 5%);
				text-shadow: -3px -3px 0px #F8F005, 3px 3px 0px #dab10e;
				clip-path: var(--slice-0);
			}

			.btn-action:hover::after {
				animation: 1s glitch;
				animation-timing-function: steps(2, end);
			}

			.btn-action:active {
				transform: translateY(5px);
				background: linear-gradient(45deg, transparent 5%, #cb012d 5%);
			}

			@keyframes glitch {
				0% {
					clip-path: var(--slice-1);
					transform: translate(-20px, -10px);
				}
				10% {
					clip-path: var(--slice-3);
					transform: translate(10px, 10px);
				}
				20% {
					clip-path: var(--slice-1);
					transform: translate(-10px, 10px);
				}
				30% {
					clip-path: var(--slice-3);
					transform: translate(0px, 5px);
				}
				40% {
					clip-path: var(--slice-2);
					transform: translate(-5px, 0px);
				}
				50% {
					clip-path: var(--slice-3);
					transform: translate(5px, 0px);
				}
				60% {
					clip-path: var(--slice-4);
					transform: translate(5px, 10px);
				}
				70% {
					clip-path: var(--slice-2);
					transform: translate(-10px, 10px);
				}
				80% {
					clip-path: var(--slice-5);
					transform: translate(20px, -10px);
				}
				90% {
					clip-path: var(--slice-1);
					transform: translate(-10px, 0px);
				}
				100% {
					clip-path: var(--slice-1);
					transform: translate(0);
				}
			}

		</style>
	</head>
	<body>

	<div class="swiper">
		<div class="swiper-wrapper">

			<div class="swiper-slide bg-game-1">
				<div class="w-full h-full bg-gradient-to-r from-black to-75% flex items-center">
					<div class="w-1/2 text-left ml-40 max-w-screen-sm space-y-6">
						<div class="text-7xl text-white">CaveGame</div>
						<div class="text-2xl text-white opacity-70">Free Open World game where you have to solve problems on your way and kill the boss! </div>

						<a href="#" class="btn-action">Download</a>

					</div>
				</div>
			</div>

			<div class="swiper-slide bg-green-700">
				2
			</div>

		</div>
		<div class="swiper-pagination"></div>
	</div>


	<script is:inline src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>

	<script>
		var swiper = new Swiper(".swiper", {
			direction: "vertical",
			slidesPerView: 1,
			spaceBetween: 0,
			mousewheel: true,
			pagination: {
				el: ".swiper-pagination",
				clickable: true,
			},
		});
	</script>
	</body>
